<?xml version="1.0" encoding="utf-8"?>

<me.scai.plato.android.views.ObservableScrollView
    android:id="@+id/parserFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:overScrollMode="always"
    android:isScrollContainer="true"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbarStyle="outsideInset"
    android:scrollbars="vertical" >

    <LinearLayout
        android:id="@+id/parserLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/darker_gray"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/ui_parser_parsing_result"
                android:id="@+id/stringizerResultLabel"
                android:layout_row="0"
                android:layout_column="0"
                android:textSize="11sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Copy"
                android:layout_margin="2dp"
                android:id="@+id/copyStringizerResult"
                android:layout_row="0"
                android:layout_column="15"
                android:textSize="11sp"
                android:background="@drawable/button_bg_general" />


        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.20"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/stringizerResult"
                android:maxLines="4"
                android:background="#ff404040"
                android:text="[Parsing result here]"
                android:editable="false"
                android:textSize="11sp" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/darker_gray"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/ui_parser_evaluation_result"
                android:id="@+id/evaluatorResultLabel"
                android:layout_gravity="right"
                android:layout_row="0"
                android:layout_column="0"
                android:textSize="11sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Copy"
                android:layout_margin="2dp"
                android:id="@+id/copyEvaluatorResult"
                android:layout_row="0"
                android:layout_column="15"
                android:textSize="11sp"
                android:background="@drawable/button_bg_general" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.20"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/evaluatorResult"
                android:maxLines="4"
                android:background="#ff404040"
                android:text="[Evaluation result here]"
                android:layout_gravity="center_horizontal"
                android:editable="false"
                android:textSize="11sp" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/darker_gray"/>
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/ui_parser_math_tex"
                android:id="@+id/mathMarkupLabel"
                android:layout_row="0"
                android:layout_column="0"
                android:textSize="11sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/ui_parser_math_ml"
                android:layout_margin="2dp"
                android:id="@+id/generateMathML"
                android:layout_row="0"
                android:layout_column="6"
                android:textSize="11sp"
                android:background="@drawable/button_bg_general" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="@string/ui_parser_generate_image"
                android:layout_margin="2dp"
                android:id="@+id/generateSVG"
                android:layout_row="0"
                android:layout_column="7"
                android:textSize="11sp"
                android:background="@drawable/button_bg_general" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Copy"
                android:layout_margin="2dp"
                android:id="@+id/copyMathTex"
                android:layout_row="0"
                android:layout_column="8"
                android:textSize="11sp"
                android:background="@drawable/button_bg_general" />


        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.20"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_horizontal">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:id="@+id/mathMarkup"
                android:maxLines="4"
                android:background="#ff404040"
                android:text="[Math TeX here]"
                android:layout_gravity="center_horizontal"
                android:editable="false"
                android:textSize="11sp" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/darker_gray" />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_horizontal">

            <!-- TODO: Parser history -->
            <!--<Button-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="fill_parent"-->
                <!--android:text="&lt;"-->
                <!--android:id="@+id/parserPrev"-->
                <!--android:textSize="14sp"-->
                <!--android:layout_row="0"-->
                <!--android:layout_column="0"-->
                <!--android:background="@drawable/button_bg_general" />-->

            <!--<Button-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="fill_parent"-->
                <!--android:text=">"-->
                <!--android:id="@+id/button"-->
                <!--android:textSize="14sp"-->
                <!--android:layout_row="0"-->
                <!--android:layout_column="1"-->
                <!--android:background="@drawable/button_bg_general" />-->

            <Button
                android:layout_width="140dp"
                android:layout_height="fill_parent"
                android:text="@string/ui_dismiss_parser"
                android:id="@+id/dismissParser"
                android:layout_gravity="right"
                android:textSize="14sp"
                android:layout_row="0"
                android:layout_column="21"
                android:background="@drawable/button_bg_parse" />
        </GridLayout>


    </LinearLayout>

</me.scai.plato.android.views.ObservableScrollView>