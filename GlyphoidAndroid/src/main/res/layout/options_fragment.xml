<?xml version="1.0" encoding="utf-8"?>
<me.scai.plato.android.views.ObservableScrollView
    android:id="@+id/parserFragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:overScrollMode="always"
    android:isScrollContainer="true"
    android:scrollbarAlwaysDrawVerticalTrack="true"
    android:scrollbarStyle="outsideInset"
    android:scrollbars="vertical" >

    <LinearLayout
        android:id="@+id/parserLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/opt_caption_parse_on_local_device_only"
                android:id="@+id/textView"
                android:layout_row="0"
                android:layout_column="0" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/optUseLocalDeviceOnly"
                android:layout_row="0"
                android:layout_column="15" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/opt_caption_display_overlaid_symbols"
                android:id="@+id/textView"
                android:layout_row="0"
                android:layout_column="0" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_horizontal">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/optDisplayOverlaySymbols"
                android:layout_row="0"
                android:layout_column="15" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/opt_caption_parser_timeout"
                android:id="@+id/textView"
                android:layout_row="0"
                android:layout_column="0" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_horizontal">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="100dp"
                android:inputType="number"
                android:ems="10"
                android:text=""
                android:id="@+id/parserTimeoutSeconds"
                android:layout_row="0"
                android:layout_column="15" />

        </GridLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.10"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:layout_width="140dp"
                android:layout_height="fill_parent"
                android:text="@string/ui_default_options"
                android:id="@+id/defaultOptions"
                android:layout_gravity="right"
                android:textSize="14sp"
                android:layout_row="0"
                android:layout_column="0" />

            <Button
                android:layout_width="140dp"
                android:layout_height="fill_parent"
                android:text="@string/ui_dismiss_options"
                android:id="@+id/dismissOptions"
                android:layout_gravity="right"
                android:textSize="14sp"
                android:layout_row="0"
                android:layout_column="15"
                android:background="@drawable/button_bg_parse" />

        </GridLayout>

    </LinearLayout>

</me.scai.plato.android.views.ObservableScrollView>