<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tokenEngineSettingsView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    
   <CheckBox
        android:id="@+id/cbIncludeSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Include token size" 
        android:checked="true" />
   
   <CheckBox
        android:id="@+id/cbIncludeWHRatio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Include width-height ratio" 
        android:checked="true" />
   
   <CheckBox
        android:id="@+id/cbIncludeNumStrokes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Include number of strokes"
        android:checked="true" />
   

   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content" >     

       <EditText
           android:id="@+id/labelTokenEngineTrainingMaxIter"
           android:layout_width="300dp"
           android:layout_height="wrap_content"           
           android:layout_weight="1" 
           android:text="Max iterations"
           android:enabled="false"        
           android:inputType="numberDecimal" />
       <EditText
           android:id="@+id/editTextTokenEngineTrainingMaxIter"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:inputType="numberDecimal" />
   </LinearLayout>
   
   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content" >

       <EditText
           android:id="@+id/labelTokenEngineTrainingThreshErr"
           android:layout_width="300dp"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:text="Threshold error"
           android:enabled="false"
           android:inputType="numberDecimal" />
       <EditText
           android:id="@+id/editTextTokenEngineTrainingThreshErr"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:inputType="numberDecimal" />   </LinearLayout>
   
    <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content" >

	   	<Button
	   	    android:id="@+id/tokenEngineSettingsButtonOK"
	   	    android:layout_width="wrap_content"
	   	    android:layout_height="wrap_content"
	   	    android:layout_below="@+id/image"
	   	    android:layout_marginRight="5dp"
	   	    android:layout_marginTop="5dp"
	   	    android:text="OK" />
		
		<Button
		    android:id="@+id/tokenEngineSettingsButtonCancel"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@+id/image"
		    android:layout_marginRight="5dp"
		    android:layout_marginTop="5dp"
		    android:text="Cancel" />

	</LinearLayout>
    
</LinearLayout>